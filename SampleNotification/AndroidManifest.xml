<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcs.samplenotification"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name="com.pcs.samplenotification.MainActivity">
            <intent-filter >
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <receiver android:name="com.pcs.samplenotification.BroadCastActivity" >
            <intent-filter >
                <action android:name="com.pcs.BROAD_CAST"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.pcs.samplenotification.Downloader" >
            <intent-filter>
                <action android:name="com.pcs.DOWNLOAD" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
